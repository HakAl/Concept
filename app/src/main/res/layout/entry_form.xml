<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_below="@+id/materialTabHost"
    android:layout_margin="16dp"
    android:layout_marginTop="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/entry_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:text="General Information"
        android:fontFamily="sans-serif-light"
        android:textStyle="italic"
        android:textSize="46sp"
        android:textColor="@color/secondary_text" />

    <View
        android:id="@+id/entry_divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/accent"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/input_unique_id"
        android:layout_margin="4dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:padding="16dp"
        android:textSize="24sp"
        android:hint="Unique ID" />

    <EditText
        android:id="@+id/input_unique_prob"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:singleLine="true"
        android:padding="16dp"
        android:textSize="24sp"
        android:hint="Unique ID (Proband)" />

    <EditText
        android:id="@+id/input_date_visit"
        android:singleLine="true"
        android:layout_margin="4dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textSize="24sp"
        android:hint="Date of Visit" />

    <EditText
        android:id="@+id/input_family_history"
        android:layout_margin="4dp"
        android:singleLine="true"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textSize="24sp"
        android:hint="Person Taking Family History" />

    <EditText
        android:id="@+id/input_email"
        android:layout_margin="4dp"
        android:singleLine="true"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textSize="24sp"
        android:hint="Email Address" />

    <EditText
        android:id="@+id/input_fax"
        android:singleLine="true"
        android:layout_margin="4dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textSize="24sp"
        android:hint="Fax" />

    <EditText
        android:id="@+id/input_consent_date"
        android:layout_margin="4dp"
        android:layout_width="match_parent"
        android:layout_marginBottom="8dp"
        android:singleLine="true"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textSize="24sp"
        android:hint="Date of Consent" />

</LinearLayout>